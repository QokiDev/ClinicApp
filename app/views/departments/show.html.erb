<%= render 'shared/header' %>

<div class="container">
  <div class="card mx-auto mt-5" style="max-width: 400px;">
    <div class="card-header bg-primary text-white">
      <h5 class="card-title text-center">Department Information</h5>
    </div>
    <div class="card-body">
      <p class="text-success text-center"><%= notice %></p>

      <div>
      <%= render @department %>
      </div>

      <div class="text-center mt-3">
      <%= link_to "Edit this department", edit_department_path(@department), class: 'btn btn-primary mb-2' %>
      <%= link_to "Back to departments", departments_path, class: 'btn btn-secondary ml-2 mb-2' %>
      <%= button_to "Destroy this department", @department, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger ml-2' %>
      </div>
    </div>
  </div>
