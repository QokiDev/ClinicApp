<%= render 'shared/header' %>

<div class="container">
  <div class="card mx-auto mt-5" style="max-width: 400px;">
    <div class="card-header bg-primary text-white">
      <h5 class="card-title text-center">Patient Card Information</h5>
    </div>
    <div class="card-body">
      <p class="text-success text-center"><%= notice %></p>

      <div>
      <%= render @patient_card %>
      </div>

      <div class="text-center mt-3">
      <%= link_to "Edit this patient card", edit_patient_card_path(@patient_card), class: 'btn btn-primary mb-2' %>
      <%= link_to "Back to patient cards", patient_cards_path, class: 'btn btn-secondary ml-2 mb-2' %>
      <%= button_to "Destroy this patient card", @patient_card, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger ml-2' %>
      </div>
    </div>
  </div>

