    <div class="card-body">
      <%= form_with(model: patient, class: 'needs-validation', novalidate: true) do |form| %>
        <% if patient.errors.any? %>
          <div class="alert alert-danger">
            <h2><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>
    
            <ul>
              <% patient.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
    
        <div class="form-group">
          <%= form.label :first_name, class: 'form-label' %>
          <%= form.text_field :first_name, class: 'form-control' %>
        </div>
    
        <div class="form-group">
          <%= form.label :last_name, class: 'form-label' %>
          <%= form.text_field :last_name, class: 'form-control' %>
        </div>
    
        <div class="form-group">
          <%= form.label :date_of_birth, class: 'form-label' %>
          <%= form.date_field :date_of_birth, class: 'form-control' %>
        </div>
    
        <div class="text-center">
          <%= form.submit 'Save Patient', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
 